{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}

    <h1>Liste des stagiaires</h1>

    <a href="{{path('add_stagiaire')}}">Ajouter un stagiaire</a><br><br>


    {% for stagiaire in stagiaires %}

        <a href="{{path('show_stagiaire', {'id':stagiaire.id})}}">{{stagiaire}}</a> ({{stagiaire.sexe}})<br>
        Né(e) le {{stagiaire.dateNaissance | date("d-m-Y")}} à {{stagiaire.ville}}<br>
        {{stagiaire.email}}<br>
        {{stagiaire.telephone}}<br>
        <a href="{{path('edit_stagiaire',{'id':stagiaire.id})}}">Éditer</a><br>
        <br>        

    {% endfor %}

{% endblock %}
