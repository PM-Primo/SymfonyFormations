<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('css/styles.css')}}">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body>
        <header class="header" id="header">
            <nav class="nav container">
                <h1 class="nav__logo">FormaCenter</h1>
                {% if app.user %}
                    <div class="nav__menu" id="nav-menu">
                        <ul class="nav__list">
                            <li class="nav__item">
                                <a href="{{path("app_module_formation")}}" class="nav__link">Modules</a>
                            </li>
                            <li class="nav__item">
                                <a href="{{path("app_session_formation")}}" class="nav__link">Sessions</a>
                            </li>
                            <li class="nav__item">
                                <a href="{{path("app_stagiaire")}}" class="nav__link">Stagiaires</a>
                            </li>
                            <li class="nav__item">
                                <a href="{{path("app_logout")}}" class="nav__link">Déconnexion</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') %} 
                                <li class="nav__item">
                                    <a href="{{path("admin_users")}}" class="nav__link">Panneau d'admin</a>
                                </li>
                            {% endif %}
                        </ul>

                        <!-- Bouton fermeture -->
                        <div class="nav__close" id="nav-close">
                            <i class="fa-solid fa-xmark"></i>
                        </div>  
                    </div>

                    <div class="nav__buttons">
                        <!-- Bouton de changement de thème -->
                        <i class="fa-solid fa-moon change-theme"></i> 
                        <!-- Bouton d'ouverture du menu déroulant -->       
                        <div class="nav__toggle" id="nav-toggle">
                            <i class="fa-solid fa-bars"></i>                            
                        </div>
                    </div>
                {% endif %}
            </nav>
        </header>

        <main>
            {% block body %}
            
            {% endblock %}
        </main>

        {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
