        {{session.nbPlaces}} places disponibles<br>
        <a href="{{path('edit_session_formation', {'id':session.id})}}">Éditer</a><br>
        <br>        

    {% endfor %}

    <h2>Sessions passées</h2>

    {% for session in sessionsPassees %}

