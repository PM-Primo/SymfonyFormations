{% extends 'base.html.twig' %}

{% block title %}Modules de formation{% endblock %}

{% block body %}

    <h1>Liste des modules de formation</h1>


    <a href="{{path('add_module_formation')}}">Ajouter un module</a>

    {% for categorie in categories %}

        <h2>{{categorie}}</h2>
        
        {% for module in modules %}

            {% if module.categorie == categorie %}
                {{module}} <a href="{{path('edit_module_formation',{'id':module.id})}}">Editer</a><br>
            {% endif %}

        {% endfor %}

    {% endfor %}

{% endblock %}
